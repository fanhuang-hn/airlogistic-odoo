<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Flight List View -->
        <record id="view_airlogistic_flight_tree" model="ir.ui.view">
            <field name="name">airlogistic.flight.tree</field>
            <field name="model">airlogistic.flight</field>
            <field name="arch" type="xml">
                <list string="Flights" 
                      decoration-success="state=='scheduled'" 
                      decoration-info="state=='boarding'"
                      decoration-warning="state=='departed'"
                      decoration-muted="state=='cancelled'"
                      decoration-danger="has_overloaded_bins==True">
                    <field name="flight_number"/>
                    <field name="airline"/>
                    <field name="departure_airport"/>
                    <field name="arrival_airport"/>
                    <field name="departure_date"/>
                    <field name="arrival_date"/>
                    <field name="state" widget="label_selection"/>
                    <field name="bin_count"/>
                    <field name="total_bin_weight" optional="show"/>
                    <field name="weight_utilization" widget="percentage" optional="show"/>
                    <field name="has_overloaded_bins" invisible="1"/>
                    <button name="action_view_bins" type="object" 
                            icon="fa-cubes" title="View Bins"/>
                </list>
            </field>
        </record>
        
        <!-- Flight Form View -->
        <record id="view_airlogistic_flight_form" model="ir.ui.view">
            <field name="name">airlogistic.flight.form</field>
            <field name="model">airlogistic.flight</field>
            <field name="arch" type="xml">
                <form string="Flight">
                    <header>
                        <button name="action_confirm_departure" type="object" string="Confirm Departure" 
                                class="btn-primary" 
                               />
                        <button name="action_confirm_arrival" type="object" string="Confirm Arrival" 
                                class="btn-primary" 
                               />
                        <button name="action_cancel_flight" type="object" string="Cancel Flight" 
                               />
                        <field name="state" widget="statusbar" 
                               statusbar_visible="scheduled,boarding,departed,arrived"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_bins" type="object" class="oe_stat_button" icon="fa-cubes">
                                <field name="bin_count" widget="statinfo" string="Bins"/>
                            </button>
                        </div>
                        
                        <!-- Alert for overloaded bins -->
                        <div class="alert alert-danger" role="alert" 
                            >
                            <strong>Warning!</strong> This flight has overloaded bins. Please check bin weights before departure.
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="flight_number" placeholder="Flight Number (e.g., VN123)"/>
                            </h1>
                            <h3>
                                <field name="airline" placeholder="Airline Name"/>
                            </h3>
                        </div>
                        
                        <group>
                            <group string="Flight Information">
                                <field name="aircraft_type"/>
                                <field name="departure_airport"/>
                                <field name="arrival_airport"/>
                            </group>
                            <group string="Schedule">
                                <field name="departure_date"/>
                                <field name="arrival_date"/>
                                <field name="is_departed" invisible="1"/>
                                <field name="has_overloaded_bins" invisible="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Cargo Capacity">
                                <field name="max_cargo_weight"/>
                                <field name="max_cargo_volume"/>
                            </group>
                            <group string="Current Load">
                                <field name="total_bin_weight"/>
                                <field name="total_bin_volume"/>
                                <field name="weight_utilization" widget="percentage"/>
                                <field name="volume_utilization" widget="percentage"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Assigned Bins" name="bins">
                                <field name="bin_ids" context="{'default_flight_id': id}">
                                    <list string="Bins" 
                                          decoration-danger="is_overloaded==True"
                                          decoration-warning="weight_utilization>=80"
                                          editable="bottom"
                                          create="false">
                                        <field name="bin_code"/>
                                        <field name="bin_type"/>
                                        <field name="volume"/>
                                        <field name="max_weight"/>
                                        <field name="current_weight" 
                                              />
                                        <field name="available_weight"/>
                                        <field name="weight_utilization" widget="percentage"/>
                                        <field name="state" widget="label_selection"/>
                                        <field name="is_overloaded" invisible="1"/>
                                        <button name="action_unassign_from_flight" type="object" 
                                                icon="fa-unlink" title="Unassign from Flight"
                                               />
                                    </list>
                                    <form string="Bin Details">
                                        <group>
                                            <group>
                                                <field name="bin_code"/>
                                                <field name="bin_type"/>
                                                <field name="bin_subtype"/>
                                            </group>
                                            <group>
                                                <field name="volume"/>
                                                <field name="max_weight"/>
                                                <field name="current_weight"/>
                                                <field name="available_weight"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Flight Kanban View -->
        <record id="view_airlogistic_flight_kanban" model="ir.ui.view">
            <field name="name">airlogistic.flight.kanban</field>
            <field name="model">airlogistic.flight</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="flight_number"/>
                    <field name="airline"/>
                    <field name="departure_airport"/>
                    <field name="arrival_airport"/>
                    <field name="departure_date"/>
                    <field name="state"/>
                    <field name="bin_count"/>
                    <field name="weight_utilization"/>
                    <field name="has_overloaded_bins"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image_fill_left" 
                                     t-attf-style="background-color: #{kanban_color(has_overloaded_bins and 'red' or 'blue')};">
                                    <i class="fa fa-plane fa-2x text-white"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="flight_number"/>
                                            </strong>
                                            <br/>
                                            <small class="o_kanban_record_subtitle text-muted">
                                                <field name="airline"/>
                                            </small>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="text-muted">
                                            <i class="fa fa-plane-departure"/> <field name="departure_airport"/> 
                                            â†’ <field name="arrival_airport"/>
                                        </div>
                                        <div class="text-muted">
                                            <i class="fa fa-clock-o"/> <field name="departure_date"/>
                                        </div>
                                        <div class="mt4">
                                            <span class="badge badge-pill badge-info">
                                                <i class="fa fa-cubes"/> <field name="bin_count"/> bins
                                            </span>
                                            <span class="badge badge-pill" 
                                                  t-attf-class="badge-#{weight_utilization >= 90 and 'danger' or weight_utilization >= 70 and 'warning' or 'success'}">
                                                <field name="weight_utilization" widget="percentage"/>
                                            </span>
                                        </div>
                                        <div t-if="has_overloaded_bins" class="mt8">
                                            <span class="badge badge-danger">
                                                <i class="fa fa-exclamation-triangle"/> Overloaded bins!
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Flight Search View -->
        <record id="view_airlogistic_flight_search" model="ir.ui.view">
            <field name="name">airlogistic.flight.search</field>
            <field name="model">airlogistic.flight</field>
            <field name="arch" type="xml">
                <search string="Search Flights">
                    <field name="flight_number" string="Flight Number"/>
                    <field name="airline" string="Airline"/>
                    <field name="departure_airport" string="From"/>
                    <field name="arrival_airport" string="To"/>
                    <field name="departure_date" string="Departure Date"/>
                    <separator/>
                    <filter name="scheduled" string="Scheduled" domain="[('state', '=', 'scheduled')]"/>
                    <filter name="boarding" string="Boarding" domain="[('state', '=', 'boarding')]"/>
                    <filter name="departed" string="Departed" domain="[('state', '=', 'departed')]"/>
                    <filter name="arrived" string="Arrived" domain="[('state', '=', 'arrived')]"/>
                    <separator/>
                    <filter name="overloaded" string="Has Overloaded Bins" domain="[('has_overloaded_bins', '=', True)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                        <filter name="group_by_airline" string="Airline" context="{'group_by': 'airline'}"/>
                        <filter name="group_by_departure_date" string="Departure Date" context="{'group_by': 'departure_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
    </data>
</odoo>