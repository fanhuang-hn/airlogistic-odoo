<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sample Wizard Action -->
    <record id="action_sample_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Operations</field>
        <field name="res_model">sample.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_sample_model"/>
        <field name="binding_view_types">list</field>
    </record>

    <!-- Sample Wizard Form View -->
    <record id="view_sample_wizard_form" model="ir.ui.view">
        <field name="name">sample.wizard.form</field>
        <field name="model">sample.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Operations">
                <sheet>
                    <div class="oe_title">
                        <h1>Bulk Operations</h1>
                        <p>Perform operations on multiple sample records at once.</p>
                    </div>
                    
                    <group name="record_info">
                        <field name="record_count" readonly="1"/>
                        <field name="record_info" widget="text" readonly="1"/>
                    </group>
                    
                    <group name="operation_selection">
                        <field name="operation" widget="radio"/>
                    </group>
                    
                    <group name="operation_params" attrs="{'invisible': [('operation', 'not in', ['update_progress', 'assign_user', 'add_tags'])]}">
                        <field name="progress_value" 
                               attrs="{'invisible': [('operation', '!=', 'update_progress')], 'required': [('operation', '=', 'update_progress')]}"/>
                        <field name="user_id" widget="many2one_avatar_user"
                               attrs="{'invisible': [('operation', '!=', 'assign_user')], 'required': [('operation', '=', 'assign_user')]}"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                               attrs="{'invisible': [('operation', '!=', 'add_tags')], 'required': [('operation', '=', 'add_tags')]}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_execute" type="object" string="Execute" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
