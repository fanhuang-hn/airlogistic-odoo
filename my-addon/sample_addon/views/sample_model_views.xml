<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sample Model Actions -->
    <record id="action_sample_model" model="ir.actions.act_window">
        <field name="name">Sample Records</field>
        <field name="res_model">sample.model</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Sample Record
            </p>
            <p>
                Sample records help you track and manage your processes.
            </p>
        </field>
    </record>

    <!-- Sample Model Tree View -->
    <record id="view_sample_model_tree" model="ir.ui.view">
        <field name="name">sample.model.tree</field>
        <field name="model">sample.model</field>
        <field name="arch" type="xml">
            <tree string="Sample Records" decoration-info="state=='draft'" 
                  decoration-success="state=='done'" decoration-muted="state=='cancelled'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'"
                       decoration-warning="state in ['confirmed', 'in_progress']"
                       decoration-success="state=='done'"
                       decoration-danger="state=='cancelled'"/>
                <field name="priority" widget="priority"/>
                <field name="progress" widget="progressbar"/>
                <field name="total_amount" widget="monetary"/>
                <field name="date_created"/>
                <field name="line_count"/>
                <field name="activity_ids" widget="list_activity"/>
            </tree>
        </field>
    </record>

    <!-- Sample Model Form View -->
    <record id="view_sample_model_form" model="ir.ui.view">
        <field name="name">sample.model.form</field>
        <field name="model">sample.model</field>
        <field name="arch" type="xml">
            <form string="Sample Record">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" 
                            class="btn-primary" states="draft"/>
                    <button name="action_start_progress" type="object" string="Start Progress" 
                            class="btn-primary" states="confirmed"/>
                    <button name="action_mark_done" type="object" string="Mark Done" 
                            class="btn-primary" states="confirmed,in_progress"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            states="draft,confirmed,in_progress"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" 
                            states="cancelled"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_lines" icon="fa-list-ul">
                            <field string="Lines" name="line_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Cancelled" 
                            bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <div class="oe_title">
                        <label for="name" string="Name"/>
                        <h1>
                            <field name="name" placeholder="Enter name..."/>
                        </h1>
                    </div>
                    <group>
                        <group name="main_info">
                            <field name="partner_id"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="priority" widget="priority"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group name="dates_amounts">
                            <field name="date_created"/>
                            <field name="date_deadline"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                            <field name="amount" widget="monetary"/>
                            <field name="total_amount" widget="monetary"/>
                        </group>
                    </group>
                    <group name="progress_info">
                        <field name="progress" widget="progressbar"/>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Enter detailed description..."/>
                        </page>
                        <page string="Lines" name="lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price" widget="monetary"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="sequence"/>
                                        <field name="quantity"/>
                                        <field name="price"/>
                                        <field name="amount"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Other Info" name="other_info">
                            <group>
                                <group>
                                    <field name="sequence"/>
                                    <field name="active"/>
                                </group>
                                <group>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Sample Model Kanban View -->
    <record id="view_sample_model_kanban" model="ir.ui.view">
        <field name="name">sample.model.kanban</field>
        <field name="model">sample.model</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="total_amount"/>
                <field name="currency_id"/>
                <field name="progress"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_title">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="partner_id"/>
                                    <div class="text-muted">
                                        Progress: <field name="progress"/>%
                                    </div>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="total_amount" widget="monetary"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sample Model Search View -->
    <record id="view_sample_model_search" model="ir.ui.view">
        <field name="name">sample.model.search</field>
        <field name="model">sample.model</field>
        <field name="arch" type="xml">
            <search string="Sample Records">
                <field name="name" string="Name"/>
                <field name="partner_id" string="Partner"/>
                <field name="user_id" string="Responsible"/>
                <field name="tag_ids" string="Tags"/>
                <separator/>
                <filter string="My Records" name="my_records" domain="[('user_id', '=', uid)]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['high', 'urgent'])]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Creation Date" name="creation_date" date="date_created"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Responsible" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Creation Date" name="group_date" context="{'group_by': 'date_created'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Sample Model Tag Actions and Views -->
    <record id="action_sample_model_tag" model="ir.actions.act_window">
        <field name="name">Sample Tags</field>
        <field name="res_model">sample.model.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Tag
            </p>
            <p>
                Tags help you categorize and organize your sample records.
            </p>
        </field>
    </record>

    <record id="view_sample_model_tag_tree" model="ir.ui.view">
        <field name="name">sample.model.tag.tree</field>
        <field name="model">sample.model.tag</field>
        <field name="arch" type="xml">
            <tree string="Sample Tags">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_sample_model_tag_form" model="ir.ui.view">
        <field name="name">sample.model.tag.form</field>
        <field name="model">sample.model.tag</field>
        <field name="arch" type="xml">
            <form string="Sample Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
