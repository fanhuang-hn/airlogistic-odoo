<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Flight Data -->
        <record id="flight_demo_1" model="flight.flight">
            <field name="flight_number">VN123</field>
            <field name="departure_airport">HAN</field>
            <field name="arrival_airport">SGN</field>
            <field name="departure_time" eval="(datetime.now() + timedelta(hours=2)).replace(minute=0, second=0, microsecond=0)"/>
            <field name="arrival_time" eval="(datetime.now() + timedelta(hours=4, minutes=30)).replace(minute=30, second=0, microsecond=0)"/>
            <field name="status">scheduled</field>
            <field name="carrier">Vietnam Airlines</field>
        </record>

        <record id="flight_demo_2" model="flight.flight">
            <field name="flight_number">QH456</field>
            <field name="departure_airport">SGN</field>
            <field name="arrival_airport">DAD</field>
            <field name="departure_time" eval="(datetime.now() + timedelta(hours=1)).replace(minute=0, second=0, microsecond=0)"/>
            <field name="arrival_time" eval="(datetime.now() + timedelta(hours=2, minutes=15)).replace(minute=15, second=0, microsecond=0)"/>
            <field name="status">scheduled</field>
            <field name="carrier">Bamboo Airways</field>
        </record>

        <record id="flight_demo_3" model="flight.flight">
            <field name="flight_number">VJ789</field>
            <field name="departure_airport">HAN</field>
            <field name="arrival_airport">PQC</field>
            <field name="departure_time" eval="(datetime.now() - timedelta(hours=1)).replace(minute=0, second=0, microsecond=0)"/>
            <field name="arrival_time" eval="(datetime.now() + timedelta(hours=1, minutes=45)).replace(minute=45, second=0, microsecond=0)"/>
            <field name="status">departed</field>
            <field name="carrier">VietJet Air</field>
        </record>

        <record id="flight_demo_4" model="flight.flight">
            <field name="flight_number">BL567</field>
            <field name="departure_airport">DAD</field>
            <field name="arrival_airport">HAN</field>
            <field name="departure_time" eval="(datetime.now() - timedelta(hours=3)).replace(minute=0, second=0, microsecond=0)"/>
            <field name="arrival_time" eval="(datetime.now() - timedelta(hours=1, minutes=30)).replace(minute=30, second=0, microsecond=0)"/>
            <field name="status">landed</field>
            <field name="carrier">Jetstar Pacific</field>
        </record>

        <record id="flight_demo_5" model="flight.flight">
            <field name="flight_number">QH999</field>
            <field name="departure_airport">SGN</field>
            <field name="arrival_airport">HAN</field>
            <field name="departure_time" eval="(datetime.now() + timedelta(hours=6)).replace(minute=0, second=0, microsecond=0)"/>
            <field name="arrival_time" eval="(datetime.now() + timedelta(hours=8, minutes=15)).replace(minute=15, second=0, microsecond=0)"/>
            <field name="status">cancelled</field>
            <field name="carrier">Bamboo Airways</field>
        </record>

        <!-- Tomorrow's flights -->
        <record id="flight_demo_6" model="flight.flight">
            <field name="flight_number">VN888</field>
            <field name="departure_airport">HAN</field>
            <field name="arrival_airport">NRT</field>
            <field name="departure_time" eval="(datetime.now() + timedelta(days=1, hours=10)).replace(minute=0, second=0, microsecond=0)"/>
            <field name="arrival_time" eval="(datetime.now() + timedelta(days=1, hours=15, minutes=30)).replace(minute=30, second=0, microsecond=0)"/>
            <field name="status">scheduled</field>
            <field name="carrier">Vietnam Airlines</field>
        </record>

    </data>
</odoo>