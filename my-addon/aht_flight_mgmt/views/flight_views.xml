<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Flight Form View -->
        <record id="view_flight_flight_form" model="ir.ui.view">
            <field name="name">flight.flight.form</field>
            <field name="model">flight.flight</field>
            <field name="arch" type="xml">
                <form string="Flight Management">
                    <header>
                        <button name="action_set_departed" type="object" string="Set Departed" 
                               class="btn-primary" states="scheduled"/>
                        <button name="action_set_landed" type="object" string="Set Landed" 
                               class="btn-primary" states="departed"/>
                        <button name="action_cancel_flight" type="object" string="Cancel Flight" 
                               class="btn-secondary" states="scheduled,departed"/>
                        <button name="action_reschedule_flight" type="object" string="Reschedule" 
                               class="btn-secondary" states="cancelled,departed"/>
                        <field name="status" widget="statusbar" statusbar_visible="scheduled,departed,landed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="flight_number" placeholder="Flight Number (e.g., VN123)"/>
                            </h1>
                        </div>
                        <group>
                            <group name="flight_info" string="Flight Information">
                                <field name="carrier" placeholder="Airline carrier name"/>
                                <field name="departure_airport" placeholder="IATA code (e.g., HAN)"/>
                                <field name="arrival_airport" placeholder="IATA code (e.g., SGN)"/>
                                <field name="flight_duration" readonly="1"/>
                            </group>
                            <group name="schedule" string="Schedule">
                                <field name="departure_time"/>
                                <field name="arrival_time"/>
                                <field name="departure_date" invisible="1"/>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Flight Tree View -->
        <record id="view_flight_flight_tree" model="ir.ui.view">
            <field name="name">flight.flight.tree</field>
            <field name="model">flight.flight</field>
            <field name="arch" type="xml">
                <tree string="Flights" decoration-success="status=='landed'" 
                      decoration-warning="status=='departed'" decoration-muted="status=='cancelled'">
                    <field name="flight_number"/>
                    <field name="carrier"/>
                    <field name="departure_airport"/>
                    <field name="arrival_airport"/>
                    <field name="departure_time"/>
                    <field name="arrival_time"/>
                    <field name="flight_duration" string="Duration (h)"/>
                    <field name="status" widget="badge" 
                           decoration-success="status=='landed'"
                           decoration-warning="status=='departed'"
                           decoration-info="status=='scheduled'"
                           decoration-danger="status=='cancelled'"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Flight Search View -->
        <record id="view_flight_flight_search" model="ir.ui.view">
            <field name="name">flight.flight.search</field>
            <field name="model">flight.flight</field>
            <field name="arch" type="xml">
                <search string="Search Flights">
                    <field name="flight_number" string="Flight Number" 
                           filter_domain="[('flight_number','ilike',self)]"/>
                    <field name="carrier" string="Carrier" 
                           filter_domain="[('carrier','ilike',self)]"/>
                    <field name="departure_airport" string="Departure Airport"/>
                    <field name="arrival_airport" string="Arrival Airport"/>
                    
                    <separator/>
                    <filter name="scheduled" string="Scheduled" 
                            domain="[('status','=','scheduled')]"/>
                    <filter name="departed" string="Departed" 
                            domain="[('status','=','departed')]"/>
                    <filter name="landed" string="Landed" 
                            domain="[('status','=','landed')]"/>
                    <filter name="cancelled" string="Cancelled" 
                            domain="[('status','=','cancelled')]"/>
                    
                    <separator/>
                    <filter name="today" string="Today" 
                            domain="[('departure_date','=',context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="this_week" string="This Week" 
                            domain="[('departure_time','&gt;=',context_today().strftime('%Y-%m-%d')),
                                    ('departure_time','&lt;',(context_today()+datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    
                    <separator/>
                    <filter name="active" string="Active" domain="[('active','=',True)]"/>
                    <filter name="archived" string="Archived" domain="[('active','=',False)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter name="group_by_carrier" string="Carrier" 
                                context="{'group_by':'carrier'}"/>
                        <filter name="group_by_status" string="Status" 
                                context="{'group_by':'status'}"/>
                        <filter name="group_by_departure_airport" string="Departure Airport" 
                                context="{'group_by':'departure_airport'}"/>
                        <filter name="group_by_departure_date" string="Departure Date" 
                                context="{'group_by':'departure_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Flight Kanban View -->
        <record id="view_flight_flight_kanban" model="ir.ui.view">
            <field name="name">flight.flight.kanban</field>
            <field name="model">flight.flight</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="status">
                    <field name="flight_number"/>
                    <field name="carrier"/>
                    <field name="departure_airport"/>
                    <field name="arrival_airport"/>
                    <field name="departure_time"/>
                    <field name="arrival_time"/>
                    <field name="status"/>
                    <field name="flight_duration"/>
                    <progressbar field="status" colors='{"scheduled": "info", "departed": "warning", "landed": "success", "cancelled": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="flight_number"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="carrier"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <i class="fa fa-plane-departure"/> <field name="departure_airport"/>
                                                <br/>
                                                <small><field name="departure_time" widget="datetime"/></small>
                                            </div>
                                            <div class="col-6">
                                                <i class="fa fa-plane-arrival"/> <field name="arrival_airport"/>
                                                <br/>
                                                <small><field name="arrival_time" widget="datetime"/></small>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <span class="badge badge-secondary">
                                                Duration: <field name="flight_duration"/> hours
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Flight Calendar View -->
        <record id="view_flight_flight_calendar" model="ir.ui.view">
            <field name="name">flight.flight.calendar</field>
            <field name="model">flight.flight</field>
            <field name="arch" type="xml">
                <calendar string="Flight Schedule" date_start="departure_time" date_stop="arrival_time" 
                          color="carrier" quick_add="False">
                    <field name="flight_number"/>
                    <field name="carrier"/>
                    <field name="departure_airport"/>
                    <field name="arrival_airport"/>
                    <field name="status"/>
                </calendar>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_flight_flight" model="ir.actions.act_window">
            <field name="name">Flights</field>
            <field name="res_model">flight.flight</field>
            <field name="view_mode">tree,form,kanban,calendar</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first flight!
                </p>
                <p>
                    Manage flight schedules, track departures and arrivals, and monitor flight status.
                </p>
            </field>
        </record>

        <record id="action_flight_flight_scheduled" model="ir.actions.act_window">
            <field name="name">Scheduled Flights</field>
            <field name="res_model">flight.flight</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_scheduled': 1}</field>
            <field name="domain">[('status', '=', 'scheduled')]</field>
        </record>

        <record id="action_flight_flight_today" model="ir.actions.act_window">
            <field name="name">Today's Flights</field>
            <field name="res_model">flight.flight</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_today': 1}</field>
        </record>

    </data>
</odoo>